{
  "definitions": [
    {
      "title": "Commerce Teaser",
      "id": "commerce-teaser",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Commerce Teaser",
              "model": "commerce-teaser",
              "filter": "commerce-teaser"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "commerce-teaser",
      "fields": [
        {
          "component": "reference",
          "name": "image",
          "label": "Product Image",
          "description": "Product image (recommended: 400x300px minimum)",
          "valueType": "string",
          "multi": false,
          "required": true
        },
        {
          "component": "text",
          "name": "image-alt",
          "label": "Image Alt Text",
          "description": "Alternative text for the product image",
          "valueType": "string",
          "required": true
        },
        {
          "component": "text",
          "name": "title",
          "label": "Product Title",
          "description": "Product name or title (max 60 characters recommended)",
          "valueType": "string",
          "required": true,
          "validation": {
            "maxLength": 100
          }
        },
        {
          "component": "text",
          "name": "price",
          "label": "Price",
          "description": "Product price with currency (e.g., $99.99)",
          "valueType": "string",
          "required": true,
          "placeholder": "$0.00"
        },
        {
          "component": "richtext",
          "name": "description",
          "label": "Product Description",
          "description": "Brief product description (max 150 characters recommended)",
          "valueType": "string",
          "required": false,
          "validation": {
            "maxLength": 200
          }
        },
        {
          "component": "text",
          "name": "link",
          "label": "Product Link",
          "description": "Full URL to product page",
          "valueType": "string",
          "required": true,
          "validation": {
            "pattern": "^https?://.*",
            "message": "Please enter a valid URL starting with http:// or https://"
          }
        },
        {
          "component": "text",
          "name": "button-text",
          "label": "Button Text",
          "description": "Call-to-action button text",
          "valueType": "string",
          "required": false,
          "placeholder": "Shop Now",
          "default": "Shop Now"
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "commerce-teaser",
      "components": []
    }
  ]
}